    <?php
    $sql = "SELECT * FROM events ORDER BY created_at DESC";
    $result = $conn->query($sql);

    if ($result && $result->num_rows > 0) {
      while ($row = $result->fetch_assoc()) {
        ?>
        <div class="event-card" data-category="<?php echo strtolower($row['category']); ?>">
          <div class="event-img">
            <img src="../<?php echo htmlspecialchars($row['poster']); ?>" 
                 alt="<?php echo htmlspecialchars($row['name']); ?>">
            <span class="tag"><?php echo htmlspecialchars($row['category']); ?></span>
          </div>
          <div class="event-info">
            <h3><?php echo htmlspecialchars($row['name']); ?></h3>
            <p><?php echo htmlspecialchars($row['details']); ?></p>
            <ul>
              <li>üìÖ <?php echo htmlspecialchars($row['event_date']); ?></li>
              <li>üìç <?php echo htmlspecialchars($row['location']); ?></li>
              <li>üë• Max <?php echo htmlspecialchars($row['participants']); ?> participants</li>
              <li>üí∞ <?php echo htmlspecialchars($row['price']); ?></li>
            </ul>
            <div class="organizer">üë§ Organizer: <?php echo htmlspecialchars($row['organizer']); ?></div>
            <a href="register.php?event_id=<?php echo $row['id']; ?>" class="btn">Register</a>
